<section class="vh-100">
    
    <div class="container-fluid h-custom mt-5">
        <h1 class="text-primary mb-5 text-center">Staff Sign In</h1>
        <div  style="margin-top: 100px" class="row d-flex justify-content-center align-items-center h-100">
            
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" asp-action="Login">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="UserName" type="text" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Enter your Username" />
                        <label class="form-label" asp-for="UserName"></label>
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input asp-for="Password" type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Enter password" />
                        <label class="form-label" asp-for="Password"></label>
                        <span asp-validation-for="Password"></span>

                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label">
                                Remember me
                            </label>
                        </div>
                        <a href="#!" class="text-body text-primary">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>